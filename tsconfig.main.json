{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/main",
        "module": "commonjs",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "jsx": "react-jsx"
    },
    "include": [
        "src/main/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "src/renderer/**/*",
        "src/agent/**/*",
        "src/e2e/**/*"
    ]
}