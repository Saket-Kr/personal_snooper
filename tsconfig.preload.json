{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist/preload",
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/preload/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}